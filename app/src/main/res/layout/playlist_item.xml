<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="@dimen/size_playlist_image"
        android:layout_height="@dimen/size_playlist_image"
        android:layout_marginStart="@dimen/layout_margin"
        android:layout_marginTop="@dimen/layout_margin"
        android:layout_marginEnd="@dimen/layout_margin"
        android:layout_marginBottom="@dimen/layout_margin_8"
        android:clickable="true"
        android:elevation="@dimen/elevation_playlist"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/corner_radius_playlist">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/size_playlist_image"
            android:layout_height="@dimen/size_playlist_image"
            android:scaleType="centerCrop" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_playlist_album_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/album_name"
        android:layout_marginStart="@dimen/layout_margin"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/tv_playlist_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/artist_name"
        android:layout_marginStart="@dimen/layout_margin"
        android:textColor="@color/artist_name_color"/>

</LinearLayout>